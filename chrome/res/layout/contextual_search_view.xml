<!-- Contextual Search view. -->
<org.chromium.chrome.browser.compositor.bottombar.contextualsearch.ContextualSearchControl android:background="#FFF" android:gravity="center" android:id="@+id/contextual_search_view" android:layout_gravity="bottom" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:chrome="http://schemas.android.com/apk/res-auto">
  
    
  <!-- Search Bar Text -->
  
    
  <TextView android:ellipsize="none" android:fadingEdge="horizontal" android:fadingEdgeLength="30dp" android:gravity="end" android:id="@+id/surrounding_text_start" android:layout_height="match_parent" android:layout_marginLeft="7dp" android:layout_weight="1" android:layout_width="0dp" android:requiresFadingEdge="horizontal" android:singleLine="true" android:textColor="#CCC" android:textSize="@dimen/contextual_search_text_size"/>
  
    
  <TextView android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/main_text" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_width="wrap_content" android:singleLine="true" android:textColor="#000" android:textSize="@dimen/contextual_search_text_size"/>
  
    
  <TextView android:ellipsize="none" android:fadingEdge="horizontal" android:fadingEdgeLength="30dp" android:gravity="start" android:id="@+id/surrounding_text_end" android:layout_height="match_parent" android:layout_marginRight="7dp" android:layout_weight="1" android:layout_width="0dp" android:requiresFadingEdge="horizontal" android:singleLine="true" android:textColor="#CCC" android:textSize="@dimen/contextual_search_text_size"/>
  

</org.chromium.chrome.browser.compositor.bottombar.contextualsearch.ContextualSearchControl>
